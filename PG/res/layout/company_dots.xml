<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dots"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="right|bottom"
	android:layout_marginRight="12dip"
	android:orientation="horizontal">
	<TextView
		android:id="@+id/dot1"
		android:background="@color/comp1"
		style="@style/DotText" />
	<TextView
		android:id="@+id/dot2"
		android:background="@color/comp2"
		style="@style/DotText" />
	<TextView
		android:id="@+id/dot3"
		android:background="@color/comp3"
		style="@style/DotText" />
	<TextView
		android:id="@+id/dot4"
		android:background="@color/comp4"
		style="@style/DotText" />
	<TextView
		android:id="@+id/dot5"
		android:background="@color/comp5"
		style="@style/DotText" />
	<TextView
		android:id="@+id/dot6"
		android:background="@color/comp6"
		style="@style/DotText" />
</LinearLayout>